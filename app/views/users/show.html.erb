<div id="user-show">
  <div id="user-sidebar">
    <div class="profile">
      <h2><%= @user.username %>'s Profile</h2>

    <p><strong>Member Since:</strong> <%= @user.created_at.strftime("%B %Y") %></p>
    </div>

  <div id="follows-block">
    <h3>Following</h3>
    <ul>
      <% for follow in @user.follows %>
        <li>
          <p><%=h follow.followed.username %></p>
          <div class="unfollow">(<%= link_to "remove", follow, :method => :delete %>)</div>
        </li>
      <% end %>
    </ul>

    <div class="find-users"><%= link_to "Find Users to Follow", users_path %></div>

    <h3>Followed By</h3>
      <ul>
        <% for user in @user.followers %>
          <li><%=h user.username %></li>
        <% end %>
      </ul>
    </div>
  </div>

  <div id="comic-library">
    <h3>Your Collection</h2>

      <% @comics.each do |c| %>
        <div class="comics">
          <% if c.comic %>
            <a href="/comics/<%= c.comic.id %>"><img src="<%= c.comic.cover_img_url%>"></a>
            <div class="comic-info">
              <strong><%= c.comic.series %> (<%= c.comic.year %>)</strong> #<%= c.comic.number %> <%= c.comic.title %>
              <a href="/comics/<%= c.comic.id %>/loans/new" class="loan">Loan This</a>
              <a href="/users/<%= current_user.id %>/ownerships/<%= c.id %>/edit">Edit This</a>
            </div>
          <% end %>
            <p><strong>Notes:</strong><%= c.note %></p>
        </div>
      <% end %>
    <div class="add-comic">
      <p class="btn"><%= link_to "Add Comic", new_comic_path %></p>
      <p class="btn"><%= link_to "Find a comic to add", comics_path %></p>
    </div>
    <% @loans.each do |l| %>
      <p><%= l.comic_id %> <%= l.lender_id %> <%= l.lendee_id %></p>
    <% end %>
  </div>
</div>

