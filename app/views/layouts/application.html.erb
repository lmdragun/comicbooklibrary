<!DOCTYPE html>
<html>
<head>
  <title>Comic Book Library</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <h1>Comic Book Library</h1>
    <div id="sign-in">
      <% if signed_in? %>
        <p><%= link_to current_user.username, current_user %></p>
        <p class="signout"><%= link_to "Sign Out", signout_path, method: :delete %></p>
      <% else %>
        <a href='#' id="signin">Sign In/Sign Up</a>
        <div id="overlay">
          <div>
            <li><%= link_to "Sign In", new_session_path %></li>
            <a href='#'>&#215;</a>
          </div>
        </div>
      <% end %>
    </div>
  </header>

<%= yield %>

</body>
</html>
